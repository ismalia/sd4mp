<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufc.dc.sd4mp.mymail" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EscreverEmailActivity"
            android:label="@string/title_activity_escrever_email" >
            <intent-filter>
                <action android:name="br.ufc.dc.sd4mp.action.ACTION_SEND" />
                <extra android:name="br.ufc.dc.sd4mp.extra.EXTRA_SUBJECT" />
                <extra android:name="br.ufc.dc.sd4mp.extra.EXTRA_EMAIL" />
                <extra android:name="br.ufc.dc.sd4mp.extra.EXTRA_BCC" />
                <extra android:name="br.ufc.dc.sd4mp.extra.EXTRA_CC" />
                <extra android:name="br.ufc.dc.sd4mp.extra.EXTRA_TEXT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
